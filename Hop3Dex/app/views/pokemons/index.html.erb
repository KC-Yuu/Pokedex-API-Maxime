<div class="flex mt-10 mb-5 justify-between">
<h1 class="text-4xl font-bold mb-6">Pokédex - Première Génération</h1>
<%= form_with url: pokemons_path, method: :get, class: 'flex items-center justify-center mt-5' do %>
  <%= text_field_tag :query, params[:query], placeholder: 'Rechercher un pokémon', class: 'w-full max-w-sm rounded-md border-gray-300 shadow-sm px-4 py-2 outline-none focus:ring-indigo-500 focus:border-indigo-500 mr-4' %>
  <%= submit_tag "Search", class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
<% end %>
</div>

<%= form_with url: export_pokemons_path(format: :csv), method: :get, local: true, class: "container mb-20 w-full mx-auto" do %>
  <div class="overflow-x-auto w-full">
    <table class="min-w-full bg-white border border-gray-300">
      <thead>
        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
          <th class="py-3 px-3 text-center">Selectionner</th>
          <th class="py-3 px-3 text-center">Numéro du Pokémon</th>
          <th class="py-3 px-3 text-center">Nom</th>
          <th class="py-3 px-3 text-center">Sprites (Normal / Shiny)</th>
          <th class="py-3 px-3 text-center">Types</th>
        </tr>
      </thead>
      <tbody class="text-gray-600 text-sm font-light">
        <% @pokemons.each do |pokemon| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-3 text-center"><%= check_box_tag "pokemon_ids[]", pokemon[:pokedex_id] %></td>
            <td class="py-3 px-3 text-center"><%= pokemon[:pokedex_id] %></td>
            <td class="py-3 px-3 text-center"><%= pokemon.dig(:name, :fr) %></td>
            <td class="flex justify-center py-3">
              <%= image_tag pokemon.dig(:sprites, :regular), loading: 'lazy', class: "w-32 h-32" if pokemon.dig(:sprites, :regular) %>
              <%= image_tag pokemon.dig(:sprites, :shiny), leading: 'lazy', class: "w-32 h32" if pokemon.dig(:sprites, :shiny) %>
            </td>
            <td class="py-3 px-3 text-center">
              <% if pokemon[:types] %>
                <div class="flex justify-center space-x-2">
                  <% pokemon[:types].each do |type| %>
                    <%= image_tag type[:image], alt: type[:name], loading: 'lazy', class: "w-12 h-12" %>
                  <% end %>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4 text-center">
    <%= submit_tag "Export to CSV", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
